@import 'font'
@import '~slick-carousel/slick/slick.css'
@import '~slick-carousel/slick/slick-theme.css'

html
body
  margin: 0
  padding: 0

body
  background: #fff
  border-top: solid 15px #333
  font: 18px 'system-ui'
  margin: 0 auto
  min-height: 100%
  padding-top: 30px

h1
  color: #000
  font-size: 21px
  letter-spacing: -1px
  margin: 0
  position: absolute
  top: -5px
  left: 0

a
  color: #000
  text-decoration: underline
  text-decoration-color: #999
  cursor: pointer

  &:hover
    color: #999

  &:link:visited
    color: #333
