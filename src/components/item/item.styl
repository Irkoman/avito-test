.item
  position: relative
  display: flex
  margin: 0 0 20px
  padding: 0
  background: #fff
  border-radius: 1px
  box-shadow: 0 0 2px rgba(0, 0, 0, 0.5)
  overflow: hidden

.item__pic
  position: relative
  display: block
  width: 130px
  height: 130px
  min-width: 130px
  min-height: 130px
  overflow: hidden

  img
    min-width: 130px
    min-height: 130px
    background: #ccc

.item__pic-number
  position: absolute
  top: 5px
  left: 5px
  padding: 0 3px 0 20px
  font-size: 12px
  color: #fff
  background: rgba(0, 0, 0, 0.3)

  &::before
    content: 'üì∑'
    position: absolute
    top: -3px
    left: 4px

.item__title
  max-width: 430px
  margin: 0
  font-size: 30px
  line-height: 1.1
  letter-spacing: -1.5px
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis

.item__description
  flex-grow: 1
  position: relative
  padding-left: 20px

.item__like
  position: absolute
  right: 5px
  margin-top: 10px
  font-size: 0
  border: 0
  background: none
  cursor: pointer

  &::after
    content: 'üíõ'
    font: 18px 'system-ui'

  &:hover::after
  &_active::after
    content: '‚ù§Ô∏è'

.item__price
  margin: 5px 0
  font-size: 20px
  font-weight: bold
  letter-spacing: -1px

.item__address
  margin: 0
  font-size: 14px

.item__date
  margin: 0
  font-size: 14px
  color: #666
